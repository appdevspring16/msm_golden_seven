<div class="page=header">
<h1>Actors</h1>
</div>

<p><a href="/actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>

      <th>Image</th>
      <th>DOB</th>
      <th>Name</th>
      <th>Bio</th>

      <th></th>
      <!-- View -->

      <th></th>
    <!-- Update -->

      <th></th>
    <!-- Delete -->
    </tr>
</thead>

<!-- loop to display database -->
<tbody>
<% @actors.each do |a| %>
<tr>

<!-- image -->
<td><img src="<%= a.image_url %>" width=80> </td>

<!-- dob -->
<td><%= a.dob %> </td>

<!-- name -->
<td><%= a.name %> </td>

<!-- bio, considering truncating -->
<td><%= truncate(a.bio) %> </td>

<!-- view button -->
<td><a href="/actors/<%= a.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a> </td>

<!-- update button -->
<td><a href="/actors/<%= a.id %>/edit_form" class="btn btn-warning"><i class="fa fa-edit"></i></a> </td>

<!-- delete button -->
<td><a href="/delete_actor/<%= a.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a> </td>

</tr>
<% end %>
</tbody>
</table>
