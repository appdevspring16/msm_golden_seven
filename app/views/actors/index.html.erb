<h1>Actors</h1>

<a href="/actors/new_form">Add A New Actor</a>

<table>
  <thead>

  <tr>
    <th>
      Image
    </th>
    <th>
      Dob
    </th>
    <th>
      Name
    </th>
    <th>
      Bio
    </th>
    <th>

    </th>
    <th>

    </th>
    <th>

    </th>
  </tr>
  </thead>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>"/>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= truncate(actor.bio) %>
    </td>
    <td>
        <a href="http://localhost:3000/actors/<%= actor.id %>">Show</a>
      </td>
      <td>
  <a href="http://localhost:3000/actors/<%= actor.id %>/edit_form">Edit</a>
      </td>
      <td>
        <a href="http://localhost:3000/actors/delete_actor/<%= actor.id %>">Delete</a>
      </td>

  </tr>
  <% end %>
</table>
