<h1>Actors</h1>

<hr>

<p>
  <a href="http://localhost:3000/actors/new_form" class="btn btn-info">ADD A NEW ACTOR</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
    <tr>
      <td><img src="<%= actor.image_url %>" width="80"></td>
      <td><%= actor.dob %></td>
      <td><%= actor.name%></td>
      <td><%= truncate(actor.bio) %></td>
      <td><a href="/actors/<%= actor.id %>" class="btn btn-danger" href="#" role="button"><i class="fa fa-search" aria-hidden="true"></i>
      </a> </td>
      <td><a href="/actors/<%= actor.id %>/edit_form" class="btn btn-success" href="#" role="button"><i class="fa fa-pencil" aria-hidden="true"></i>
      </a></td>
      <td><a href="delete_actor/<%= actor.id %>" class="btn btn-warning" href="#" role="button"><i class="fa fa-trash-o" aria-hidden="true"></i>
      </a></td>
    </tr>
    <% end %>
  </tbody>
</table>
