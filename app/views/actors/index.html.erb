<h1>Actors</h1>

<a href="/actors/new_form">Add a New Actor</a>

<table>
  <tr>
    <th>Image</th>
    <th>Date of Birth</th>
    <th>Name</th>
    <th>Bio</th>

  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>"/>
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= actor.bio %>
    </td>

    <td>
      <a href="/actors/<%= actor.id %>">View</a>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
