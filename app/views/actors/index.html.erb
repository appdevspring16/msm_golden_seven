<!-- Connect to Font Awesome CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<nav class = "padding-inside-top-xs">
<div class="btn-group" role="group" aria-label="...">
  <a class="btn btn-default" href="/movies" role="button">Movies</a>
    <a class="btn btn-default" href="/directors" role="button">Directors</a>
        <a class="btn btn-success" href="/actors" role="button">Actors</a>
</div>
</nav>

<p class="padding-inside-top-xs"><a href="/actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" width="80"></td>
        <td><%= actor.dob %></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
