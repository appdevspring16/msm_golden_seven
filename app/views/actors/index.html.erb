<h1>Actors</h1>

<p><a href="/actors/new_form">Add an Actor</a></p>

<table>

  <tr>
    <td>Image</td>
    <td>DOB</td>
    <td>Name</td>
    <td>Bio</td>
  </tr>

  <% @actors.each do |actor| %>

  <tr>
    <td><img src="<%= actor.image_url %>" width="80"></td>
    <td><%= actor.dob %></td>
    <td><%= actor.name %></td>
    <td><%= actor.bio %></td>
    <td><a href="/actors/<%= actor.id %>">Show</a></td>
    <td><a href="/actors/<%= actor.id %>/edit_form">Edit</a></td>
    <td><a href="/delete_actor/<%= actor.id %>">Delete</a></td>
  </tr>

  <% end %>

</table>
