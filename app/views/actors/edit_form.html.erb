<h1>Update Actor #<%= @actor.id %></h1>

<form action="/update_actor/<%= @actor.id %>">
  <div>
    <label for="name">
      Name
    </label>
    <input type="text" id="name" name="name" value="<%= @actor.name %>">
  </div>

  <div>
    <label for="dob">
      DOB
    </label>
    <input type="text" id="dob" name="dob" value="<%= @actor.dob %>">
  </div>

  <div>
    <label for="bio">
      Bio
    </label>
    <input type="text" id="bio" name="bio" value="<%= @actor.bio %>">
  </div>

  <div>
    <label for="image_url">
      Image URL
    </label>
    <input type="text" id="image_url" name="image_url" value="<%= @actor.image_url %>">
  </div>

  <div>
    <button>Update Actor</button>
  </div>
</form>
