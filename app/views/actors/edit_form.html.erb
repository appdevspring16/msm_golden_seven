<h1>Edit Actor</h1>

<form action="/update_actor/<%= @actor.id %>">
  <label>Name</label>
  <input type="text" id = "the_name" name="the_name" placeholder="Name" value="<%= @actor.name %>">

  <label>Bio</label>
  <input type="text" id = "the_bio" name="the_bio" placeholder="Bio" value = "<%= @actor.bio %>" >

  <label>DOB</label>
  <input type="text" id = "the_dob" name="the_dob" placeholder="DOB" value = "<%= @actor.dob %>" >

  <label>Image URL</label>
  <input type="text" id = "the_image_url" name="the_image_url" placeholder="Image URL" value = "<%= @actor.image_url %>" >

  <button>Submit</button>
</form>
