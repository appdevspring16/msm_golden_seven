<h1>Update Actor Details</h1>

<form action="/actors/update_actor/<%=@actor.id%>">
  <div>
    <label for="actor_name">Name:</label>
    <input id="actor_name" type="string" name="the_name" value="<%=@actor.name%>">
  </div>
  <div>
    <label for="actor_dob">DOB:</label>
    <input id="actor_dob" type="string" name="the_dob" value="<%=@actor.dob%>">
  </div>
  <div>
    <label for="actor_image_url">Image URL:</label>
    <input id="actor_image_url" type="string" name="the_image_url" value="<%=@actor.image_url%>">
  </div>
  <div>
    <label for="actor_bio">Bio:</label>
    <input id="actor_bio" type="text" name="the_bio" value="<%=@actor.bio%>">
  </div>

  <div>
    <button>Update actor</button>
  </div>
</form>
