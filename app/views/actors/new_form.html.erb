<h1>Add Actor</h1>


<form action="/create_actor">
  <!-- Label and input for dob -->
  <div>
    <label for="dob">
      Dob
    </label>
    <input type="text" id="dob" name="dob" placeholder="Dob">
  </div>

  <!-- Label and input for name -->
  <div>
    <label for="name">
      Name
    </label>
    <input type="text" id="name" name="name" placeholder="Name">
  </div>

  <!-- Label and input for bio -->
  <div>
    <label for="bio">
      Bio
    </label>
    <textarea id="bio" name="bio" placeholder="Bio" rows="3"></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div>
    <label for="image_url">
      Image url
    </label>
    <input type="text" id="image_url" name="image_url" placeholder="Image url">
  </div>

  <div>
    <button>Create Actor</button>
  </div>
</form>
