<h1>Edit Movie #<%= @movie.id %></h1>

<form action="http://localhost:3000/update_movie/<%= @movie.id %>">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @movie.title %>">
  </div>
  <div class="">
    <label for="year">Year</label>
    <input type="text" name="year" value="<%= @movie.year %>">
  </div>
  <div class="">
    <label for="duration">Duration</label>
    <input type="text" name="duration" value="<%= @movie.duration %>">
  </div>
  <div class="">
    <label for="description">Description</label>
    <input type="text" name="description" value="<%= @movie.description %>">
  </div>
  <div class="">
    <label for="image_url">Image URL</label>
    <input type="text" name="image_url" value="<%= @movie.image_url %>">
  </div>
  <button>Update Movie</button>
</form>
