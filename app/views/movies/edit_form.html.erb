<h1>Update Movie #<%= @movie.id %></h1>

<form action="/update_movie/<%= @movie.id %>">
  <div>
    <label for="title">
      Title
    </label>
    <input type="text" id="title" name="title" value="<%= @movie.title %>">
  </div>

  <div>
    <label for="year">
      Year
    </label>
    <input type="text" id="year" name="year" value="<%= @movie.year %>">
  </div>

  <div>
    <label for="duration">
      Duration
    </label>
    <input type="text" id="duration" name="duration" value="<%= @movie.duration %>">
  </div>

  <div>
    <label for="description">
      Description
    </label>
    <input type="text" id="description" name="description" value="<%= @movie.description %>">
  </div>

  <div>
    <label for="image_url">
      Image URL
    </label>
    <input type="text" id="image_url" name="image_url" value="<%= @movie.image_url %>">
  </div>

  <div>
    <button>Update Movie</button>
  </div>
</form>
