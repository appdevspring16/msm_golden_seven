<h1>Edit Movie</h1>

<hr>

<form class="form-horizontal" action="http://localhost:3000/update_movie/<%= @movie.id %>">

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" value="<%= @movie.title %>">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Year</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="year" name="year" value="<%= @movie.year %>">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">Duration</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="duration" name="duration" value="<%= @movie.duration %>">
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <textarea  class="form-control" id="description" name="description" rows="3"><%= @movie.description %>"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">Image URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="image_url" name="image_url" value="<%= @movie.image_url %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="submit" value="Update Movie" class="btn btn-info">
    </div>
  </div>

</form>
