<div class="page=header">
<h1>Movies</h1>
</div>

<p><a href="/movies/new_form" class="btn btn-primary">Add a New Movie</a></p>

<table class="table table-hover">
  <thead>
    <tr>

      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>

      <th></th>
      <!-- View -->

      <th></th>
    <!-- Update -->

      <th></th>
    <!-- Delete -->
    </tr>
</thead>

<!-- loop to display database -->
<tbody>
<% @movie.each do |a| %>
<tr>

<!-- image -->
<td><img src="<%= a.image_url %>" width=80> </td>

<!-- title -->
<td><%= a.title %> </td>

<!--year -->
<td><%= a.year %> </td>

<td><%= a.duration %> </td>


<!-- description-->
<td><%= truncate(a.description) %> </td>

<!-- view button -->
<td><a href="/movies/<%= a.id %>" class="btn btn-primary"><i class="fa fa-search-plus"></i></a> </td>

<!-- update button -->
<td><a href="/movies/<%= a.id %>/edit_form" class="btn btn-warning"><i class="fa fa-edit"></i></a> </td>

<!-- delete button -->
<td><a href="/delete_movie/<%= a.id %>" class="btn btn-danger"><i class="fa fa-trash-o"></i></a> </td>

</tr>
<% end %>
</tbody>
</table>
