<div>
<h1>Movies</h1>
</div>
<hr>
<div>
    <a href="/movies/new_form" class="btn btn-primary">ADD A NEW MOVIE</a>


</div>
<div>
  <table class="table">
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description	</th>
    <th> </th>
    <th> </th>
    <th> </th>

    <tbody>
      <% @movie.each do |movie| %>
      <tr>
        <td> <img src="<%=movie.image_url%>"></td>
        <td><%=movie.title%></td>
        <td><%=movie.year%></td>
        <td><%=movie.duration%></td>
        <td><%=movie.description%></td>
        <td>

           <a href="/movies/<%=movie.id %>" class="btn btn-primary"></a>

        </td>
        <td>

           <a href="/movies/<%=movie.id %>/edit_form" class="btn btn-warning"></a>

        </td>
        <td>

           <a href="/delete_movie/<%=movie.id %>" class="btn btn-danger"></a>

        </td>
      </tr>
      <%end%>
    </tbody>

  </table>

</div>
