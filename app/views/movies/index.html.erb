<div class="page-header">
  <h1>Movies</h1>
</div>
<hr>
<a href="/movies/new_form">Add a new Movie</a>
<p>
</p>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><img src="<%= movie.image_url %>" width="80" alt="" /></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= movie.duration %></td>
      <td><%= movie.description %></td>
      <td>
        <a href="/movies/<%= movie.id %>">Show</a>
        <a href="/movies/<%= movie.id %>/edit_form">Edit</a>
        <a href="/delete_movie/<%= movie.id %>">Delete</a>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
