<h1>Movies</h1>

<a href="/movies/new_form" class="btn btn-primary">Add a New Movie</a>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th>
      Director
    </th>
  </tr>
  <% @list_of_movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>"/>
    </td>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <%= movie.duration %>
    </td>
    <td>
      <%= movie.description %>
    </td>
    <td>
      Director
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">View</a>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
