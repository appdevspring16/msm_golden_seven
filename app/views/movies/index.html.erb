<h1>Movies</h1>

<p>
  <a href="#">Add a New Movie</a>
</p>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @movie_list.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width = "80">
    </td>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <%= movie.duration %>
    </td>
    <td>
      <%= truncate(movie.description) %>
    </td>
    <td>
      <a href="\movies\<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="https://www.google.com">Edit</a>
    </td>
    <td>
      <a href="https://www.google.com">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
