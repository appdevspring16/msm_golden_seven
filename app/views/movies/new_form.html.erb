<h1>Add Movie</h1>

<form action="/create_movie">
  <label for="movie_title">Title</label>
  <input type="text" name="movie_title">
  <label for="movie_year">Year</label>
  <input type="integer" name="movie_year">
  <label for="movie_duration">Duration</label>
  <input type="integer" name="movie_duration">
  <label for="movie_description">Description</label>
  <input type="textarea" name="movie_description">
  <label for="movie_url">Image url</label>
  <input type="text" name="movie_url">
  <button>Create Movie</button>
</form>
