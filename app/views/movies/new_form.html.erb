<div>
  <h1>Add Movie</h1>
</div>

<form action="/create_movie">

  <div>
    <label>
      Title
    </label>
    <div>
      <input type="text" name="title" placeholder="Title">
    </div>
  </div>


  <div>
    <label>
      Year
    </label>
    <div>
      <input type="integer" name="year" placeholder="Year">
    </div>
  </div>


  <div>
    <label>
      Duration
    </label>
    <div>
      <input type="integer" name="duration" placeholder="Duration">
    </div>
  </div>

  <div>
    <label>
      Description
    </label>
    <div>
      <textarea name="description" placeholder="Description" rows="3"></textarea>
    </div>
  </div>


  <div>
    <label>
      Image url
    </label>
    <div>
      <input type="text" name="image_url" placeholder="Image url">
    </div>
  </div>

  <div>
    <div>
      <input type="submit" value="Create Movie">
    </div>
  </div>
</form>
