<div>
  <h1>Add Movie</h1>
</div>

<form action ="http://localhost:3000/create_movie">
  <!-- Label and input for title -->
  <div>
    <label for="title">
      Title
    </label>
    <div>
      <input type="text" id="title" name="the_title" placeholder="Title">
    </div>
  </div>

  <!-- Label and input for year -->
  <div>
    <label for="year">
      Year
    </label>
    <div>
      <input type="text" id="year" name="the_year" placeholder="Year">
    </div>
  </div>

  <!-- Label and input for duration -->
  <div>
    <label for="duration">
      Duration
    </label>
    <div>
      <input type="text" id="duration" name="the_duration" placeholder="Duration">
    </div>
  </div>

  <!-- Label and input for description -->
  <div>
    <label for="description">
      Description
    </label>
    <div>
      <textarea id="description" name="the_description" placeholder="Description" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div>
    <label for="image_url">
      Image url
    </label>
    <div>
      <input type="text" id="image_url" name="the_image_url" placeholder="Image url">
    </div>
  </div>

  <!-- Label and input for director_id -->
  <div>
    <label for="director_id">
      Director
    </label>
    <div>
      <%= select_tag(:the_director_id, options_from_collection_for_select(Director.all, :id, :name), :class => "form-control") %>
    </div>
  </div>

  <div>
    <div>
<button>Create Movie</button>
    </div>
  </div>
</form>
