
<div class="container">
  <div class="row">
  <div class="col-md-6"><h2>Movies</h2><a href="http://localhost:3000/movies_create/" class="btn btn-success btn-lg active" role="button">Add a new one</a></div>
  </div>
  <div class="row">
    <div class="col-md-1"><h4>Image</h4></div>
    <div class="col-md-1"><h4>Year</h4></div>
    <div class="col-md-1"><h4>Title</h4></div>
    <div class="col-md-1"><h4>Duration</h4></div>
    <div class="col-md-5"><h4>Description</h4></div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>

  </div>
  <% @list_of_movies.each do |x|%>
  <div class="row">
    <div class="col-md-1"><img src="<%= x.image_url%>" width="80"></div>
    <div class="col-md-1"><h6><%= x.year %></h6></div>
    <div class="col-md-1"><h6><%= x.title %></h6></div>
    <div class="col-md-1"><h6><%= x.duration %></h6></div>
    <div class="col-md-5"><h6><%= truncate(x.description) %></h6> </div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/movies/<%= x.id %>">Show</a></h5></div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/movies/edit/<%= x.id %>">Edit</a></h5></div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/movies/delete/<%= x.id %>">Delete</a></h5></div>

  </div>
  <% end %>
</div>
