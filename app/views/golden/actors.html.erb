
<div class="container">
  <div class="row">
  <div class="col-md-6"><h2>Actors</h2><a href="http://localhost:3000/actors_create/" class="btn btn-success btn-lg active" role="button">Add a new one</a></div>
  </div>
  <div class="row">
    <div class="col-md-1"><h4>Image</h4></div>
    <div class="col-md-1"><h4>DOB</h4></div>
    <div class="col-md-1"><h4>Name</h4></div>
    <div class="col-md-6"><h4>Bio</h4></div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>

  </div>
  <% @list_of_actors.each do |x|%>
  <div class="row">
    <div class="col-md-1"><img src="<%= x.image_url%>" width="80"></div>
    <div class="col-md-1"><h6><%= x.dob %></h6></div>
    <div class="col-md-1"><h6><%= x.name %></h6></div>
    <div class="col-md-6"><h6><%= truncate(x.bio) %></h6> </div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/actors/<%= x.id %>">Show</a></h5></div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/actors/edit/<%= x.id %>">Edit</a></h5></div>
    <div class="col-md-1"><h5><a href="http://localhost:3000/actors/delete/<%= x.id %>">Delete</a></h5></div>

  </div>
  <% end %>
</div>
