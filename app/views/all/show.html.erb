<h1><%=@types%> #<%=@id.id%><h1>

<% if @types == "Director" %>
  <dl class="dl-horizontal">
  <dt>Dob</dt>
  <dd><%= @id.dob %></dd>

  <dt>Name</dt>
  <dd><%= @id.name %></dd>

  <dt>Bio</dt>
  <dd><%= @id.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @id.image_url %>" width="320"></dd>

</dl>

<% elsif @types == "Actor" %>
  <dl class="dl-horizontal">
  <dt>Dob</dt>
  <dd><%= @id.dob %></dd>

  <dt>Name</dt>
  <dd><%= @id.name %></dd>

  <dt>Bio</dt>
  <dd><%= @id.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @id.image_url %>" width="320"></dd>

</dl>
<% elsif @types == "Movie" %>
<dl class="dl-horizontal">
<dt>Title</dt>
<dd><%= @id.title %></dd>

<dt>Year</dt>
<dd><%= @id.year %></dd>

<dt>Duration</dt>
<dd><%= @id.duration %></dd>

<dt>Description</dt>
<dd><%= @id.description %></dd>

<dt>Image</dt>
<dd><img src="<%= @id.image_url %>" width="320"></dd>

</dl>
<% end %>
