<h1>Add A New <%=@type%></h1>

<% if @type == "Director" %>
  <form action= "/create_director">
    <div>
      <label for="name_input">Name</label>
      <input id="name_input" type="string" name="name">
    </div>
    <div>
      <label for="bio_input">Bio</label>
      <input id="bio_input" type="text" name="bio">
    </div>
    <div>
      <label for="dob_input">D.O.B.</label>
      <input id="dob_input" type="string" name="dob">
    </div>
    <div>
      <label for="image_url_input">Image URL</label>
      <input id="image_url_input" type="string" name="image_url">
    </div>
    <div>
      <button>Create <%=@type%></button>
    </div>
  </form>
<% elsif @type == "Actor" %>
  <form action= "/create_actor">
    <div>
      <label for="name_input">Name</label>
      <input id="name_input" type="string" name="name">
    </div>
    <div>
      <label for="bio_input">Bio</label>
      <input id="bio_input" type="text" name="bio">
    </div>
    <div>
      <label for="dob_input">D.O.B.</label>
      <input id="dob_input" type="string" name="dob">
    </div>
    <div>
      <label for="image_url_input">Image URL</label>
      <input id="image_url_input" type="string" name="image_url">
    </div>
    <div>
      <button>Create <%=@type%></button>
    </div>
  </form>
<% elsif @type == "Movie" %>
    <form action= "/create_movie">
      <div>
        <label for="title_input">Title</label>
        <input id="title_input" type="string" name="title">
      </div>
      <div>
        <label for="year_input">Year</label>
        <input id="year_input" type="integer" name="year">
      </div>
      <div>
        <label for="duration_input">Duration</label>
        <input id="duration_input" type="integer" name="duration">
      </div>
      <div>
        <label for="description_input">Description</label>
        <input id="description_input" type="text" name="description">
      </div>
      <div>
        <label for="image_url_input">Image URL</label>
        <input id="image_url_input" type="string" name="image_url">
      </div>
      <div>
        <button>Create <%=@type%></button>
      </div>
    </form>
<% end %>
