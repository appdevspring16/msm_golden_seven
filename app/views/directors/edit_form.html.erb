<h1>Edit Director #<%= @director.id %></h1>


<form action="/update_director/<%= @director.id %>">
  <!-- Label and input for dob -->
  <div>
    <label for="dob">
      Dob
    </label>
    <input type="text" id="dob" name="dob" placeholder="Dob" value="<%= @director.dob %>">
  </div>

  <!-- Label and input for name -->
  <div>
    <label for="name">
      Name
    </label>
    <input type="text" id="name" name="name" placeholder="Name" value="<%= @director.name %>">
  </div>

  <!-- Label and input for bio -->
  <div>
    <label for="bio">
      Bio
    </label>
    <textarea id="bio" name="bio" placeholder="Bio" rows="3"><%= @director.bio %></textarea>
  </div>

  <!-- Label and input for image_url -->
  <div>
    <label for="image_url">
      Image url
    </label>
    <input type="text" id="image_url" name="image_url" placeholder="Image url" value="<%= @director.image_url %>">
  </div>

  <div>
    <button>Update Director</button>
  </div>
</form>
