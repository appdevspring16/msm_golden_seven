<h1>Add Director</h1>

<hr>

<form class="form-horizontal" action="http://localhost:3000/create_director">

  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Name">
    </div>
  </div>

  <div class="form-group">
    <label for="year" class="col-sm-2 control-label">Bio</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="bio" name="bio" placeholder="Bio">
    </div>
  </div>

  <div class="form-group">
    <label for="duration" class="col-sm-2 control-label">Dob</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="dob" name="dob" placeholder="Dob">
    </div>
  </div>

  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">Image URL</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="image_url" name="image_url" placeholder="Image URL">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
      <input type="submit" value="Create Director" class="btn btn-info">
    </div>
  </div>

</form>
