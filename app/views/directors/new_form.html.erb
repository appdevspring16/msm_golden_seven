<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New form</title>
  </head>
  <body>


    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/movies">MovieDB</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/directors">Directors <span class="sr-only">(current)</span></a></li>
            <li class="active"><a href="/movies">Movies <span class="sr-only">(current)</span></a></li>
            <li class="active"><a href="/actors">Actors <span class="sr-only">(current)</span></a></li>
          </ul>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/paper/bootstrap.min.css" media="screen" title="no title" charset="utf-8">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css" media="screen" title="no title" charset="utf-8">




    <div class="page-header">
      <h1>Add Director</h1>
    </div>

    <form action="/create_director" class="form-horizontal">
      <!-- Label and input for dob -->
      <div class="form-group">
        <label for="dob" class="col-sm-2 control-label">
          Dob
        </label>
        <div class="col-sm-10">
          <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control">
        </div>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control">
        </div>
      </div>

      <!-- Label and input for bio -->
      <div class="form-group">
        <label for="bio" class="col-sm-2 control-label">
          Bio
        </label>
        <div class="col-sm-10">
          <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"></textarea>
        </div>
      </div>

      <!-- Label and input for image_url -->
      <div class="form-group">
        <label for="image_url" class="col-sm-2 control-label">
          Image url
        </label>
        <div class="col-sm-10">
          <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Director" class="btn btn-primary">
        </div>
      </div>
    </form>

  </body>
</html>
