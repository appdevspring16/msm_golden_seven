<h1>Directors</h1>

<p>
  <a href="/directors/new_form">Add a New Director</a>
</p>

<table>
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th>Bio</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @director_list.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width = "80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <%= truncate(director.bio) %>
    </td>
    <td>
      <a href="\directors\<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="#">Edit</a>
    </td>
    <td>
      <a href="/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
