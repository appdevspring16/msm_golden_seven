<div class="page-header">
  <h1>Directors</h1>
</div>

<p><a href="/directors/new_form">Add a New Director</a></p>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Dob</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>

<tbody>
  <% @directors.each do |director| %>
  <tr>
    <td><%=director.name %></td>
    <td><%=truncate(director.bio)  %></td>
    <td><%=director.dob %></td>
    <td><img src="<%=director.image_url%>" width="80"></td>
    <td>
          <a href="/directors/<%= director.id %>" class="btn btn-primary">Look
          </a>
    </td>
    <td>
          <a href="/directors/<%= director.id %>/edit_form" class="btn btn-warning">Edit
          </a>
    </td>
    <td>
          <a href="/delete_directors/<%= director.id %>" class="btn btn-danger">Delete
          </a>
    </td>
  </tr>
  <%end%>
</tbody>
</table>
