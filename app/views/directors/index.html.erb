<h1>Directors</h1>

<p><a href="/directors/new_form">Add a Director</a></p>

<table>

  <tr>
    <td>Image</td>
    <td>DOB</td>
    <td>Name</td>
    <td>Bio</td>
  </tr>

  <% @directors.each do |director| %>

  <tr>
    <td><img src="<%= director.image_url %>" width="80"></td>
    <td><%= director.dob %></td>
    <td><%= director.name %></td>
    <td><%= director.bio %></td>
    <td><a href="/directors/<%= director.id %>">Show</a></td>
    <td><a href="/directors/<%= director.id %>/edit_form">Edit</a></td>
    <td><a href="/delete_director/<%= director.id %>">Delete</a></td>
  </tr>

  <% end %>

</table>
