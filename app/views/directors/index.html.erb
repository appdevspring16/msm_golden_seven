<div class="page-header">
  <h1>Directors</h1>
</div>

<p><a href="/directors/new_form" class="btn btn-primary">Add a New Director</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= @directors.each do |directors| %>
      <tr>
        <td><img src="<%= directors.image_url %>" width="80"></td>
        <td><%= directors.dob %></td>
        <td><%= directors.name %></td>
        <td><%= truncate(directors.bio) %></td>
        <td>
          <a href="/directors/<%= directors.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/directors/<%= directors.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_directors/<%= directors.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
