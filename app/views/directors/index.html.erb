<h1>Directors</h1>

<hr>

<p>
  <a href="http://localhost:3000/directors/new_form" class="btn btn-info">ADD A NEW DIRECTOR</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
    <tr>
      <td><img src="<%= director.image_url %>" width="80"></td>
      <td><%= director.dob %></td>
      <td><%= director.name%></td>
      <td><%= truncate(director.bio) %></td>
      <td><a href="/directors/<%= director.id %>" class="btn btn-danger" href="#" role="button"><i class="fa fa-search" aria-hidden="true"></i>
      </a> </td>
      <td><a href="/directors/<%= director.id %>/edit_form" class="btn btn-success" href="#" role="button"><i class="fa fa-pencil" aria-hidden="true"></i>
      </a></td>
      <td><a href="delete_director/<%= director.id %>" class="btn btn-warning" href="#" role="button"><i class="fa fa-trash-o" aria-hidden="true"></i>
      </a></td>
    </tr>
    <% end %>
  </tbody>
</table>
