<h1>Actors</h1>
<hr>
<a href ="">ADD A NEW ACTOR</a>
<table>
  <tr>
    <th>Image</th>
    <th>DOB</th>
    <th>Name</th>
    <th>Bio</th>
    <th>Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= actor.bio %>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/actors/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
