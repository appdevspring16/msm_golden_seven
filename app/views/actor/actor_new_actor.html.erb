    <div class="row greeting margin-above-top-md">
        <div class="col-sm-3"><h1>Actor #<%= @actor_id %></h1></div>
    </div>
    <div class="row">
          <div class="col-lg-offset-1 col-lg-2">Dob</div>
          <div class="col-lg-7"><%= @actor_dob %></div>
